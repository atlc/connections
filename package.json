{
    "name": "ts-react-express-esbuild",
    "version": "1.0.0",
    "description": "A boilerplate project for TypeScript, React, Express using esbuild.",
    "main": "dist/server.js",
    "scripts": {
        "watch:client": "node esbuild-config/client.dev.mjs",
        "watch:server": "node esbuild-config/server.dev.mjs",
        "watch:restart-server": "nodemon --config nodemon.json",
        "dev": "npm-run-all --parallel watch:*",
        "build:client": "node esbuild-config/client.prod.mjs",
        "build:server": "node esbuild-config/server.prod.mjs",
        "build": "npm-run-all --sequential build:*",
        "start": "node dist/server.js",
        "deploy": "git push && git push heroku main"
    },
    "keywords": [
        "typescript",
        "react",
        "express",
        "esbuild",
        "boilerplate"
    ],
    "author": "Covalence",
    "license": "MIT",
    "dependencies": {
        "@reduxjs/toolkit": "^2.0.1",
        "@types/dotenv": "^8.2.0",
        "@types/jsonwebtoken": "^9.0.6",
        "bootstrap": "^5.3.1",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.2",
        "mysql2": "^3.9.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-redux": "^9.0.4",
        "sweetalert2": "^11.7.32"
    },
    "devDependencies": {
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/node": "^20.5.0",
        "@types/react": "^18.2.20",
        "@types/react-dom": "^18.2.7",
        "esbuild": "^0.19.2",
        "esbuild-sass-plugin": "^2.12.0",
        "nodemon": "^3.0.1",
        "npm": "^10.2.1",
        "npm-run-all": "^4.1.5",
        "sass": "^1.65.1",
        "typescript": "^5.1.6"
    }
}
